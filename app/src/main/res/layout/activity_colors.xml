<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/color"
        android:contentDescription="Back"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:onClick="onBackButtonClick"
        android:src="@drawable/back1" />

    <TextView
        android:id="@+id/headerImageView"
        android:layout_below="@id/backButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-28dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Colors"
        android:textColor="@color/black"
        android:fontFamily="@font/poppinssemibold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/headerImageView"
        android:layout_above="@id/backButton"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="34dp"
        android:layout_alignParentBottom="true"
        android:fillViewport="true">

        <GridLayout
            android:id="@+id/colorsGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="5"
            android:padding="8dp">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                android:backgroundTint="@color/white"
                android:background="@null"
                android:src="@drawable/ic_red"
                android:contentDescription="Red"
                android:tag="red" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                android:backgroundTint="@color/white"
                android:background="@null"
                android:src="@drawable/ic_blue"
                android:contentDescription="Blue"
                android:tag="blue" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                android:backgroundTint="@color/white"
                android:background="@null"
                android:src="@drawable/ic_yellow"
                android:contentDescription="Yellow"
                android:tag="yellow" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                android:backgroundTint="@color/white"
                android:background="@null"
                android:src="@drawable/ic_green"
                android:contentDescription="Green"
                android:tag="green" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                android:backgroundTint="@color/white"
                android:background="@null"
                android:src="@drawable/ic_orange"
                android:contentDescription="Orange"
                android:tag="orange" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                android:backgroundTint="@color/white"
                android:background="@null"
                android:src="@drawable/ic_purple"
                android:contentDescription="Purple"
                android:tag="purple" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                android:backgroundTint="@color/white"
                android:background="@null"
                android:src="@drawable/ic_pink"
                android:contentDescription="Pink"
                android:tag="pink" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                android:backgroundTint="@color/white"
                android:background="@null"
                android:src="@drawable/ic_brown"
                android:contentDescription="Brown"
                android:tag="brown" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                android:backgroundTint="@color/white"
                android:background="@null"
                android:src="@drawable/ic_gray"
                android:contentDescription="Gray"
                android:tag="gray" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                android:backgroundTint="@color/white"
                android:background="@null"
                android:src="@drawable/ic_white"
                android:contentDescription="White"
                android:tag="white" />

        </GridLayout>
    </ScrollView>
</RelativeLayout>
