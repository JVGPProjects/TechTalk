<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/bg"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcomeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:text="Welcome to"
        android:textColor="@color/black"
        android:fontFamily="@font/poppinssemibold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"
        android:textSize="22dp"
        android:textColor="@color/techtalk"
        android:text="TechTalk"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppinssemibold" />




    <ImageView
        android:id="@+id/welcomeHelloImage"
        android:layout_width="220dp"
        android:layout_height="190dp"
        android:scaleType="fitCenter"
        android:src="@drawable/helloo"
        android:contentDescription="Welcome Hello Image"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:text="Make your child's daily"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppinssemibold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-27dp"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:text="communication easy and better"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppinssemibold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-27dp"
        android:layout_marginRight="33dp"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:text="with"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppinssemibold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-43dp"
        android:layout_marginLeft="14dp"
        android:textSize="13dp"
        android:textColor="@color/techtalk"
        android:text="TechTalk"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppinssemibold" />


    <Button
        android:id="@+id/getStartedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:textColor="@color/button_text"
        android:fontFamily="@font/poppinssemibold"
        android:backgroundTint="@color/button_background" />

</LinearLayout>
