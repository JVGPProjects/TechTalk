<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/signinImage"
            android:layout_marginTop="50dp"
            android:layout_width="260dp"
            android:layout_height="250dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:src="@drawable/hii"
            android:contentDescription="Sign In Image"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/welcomeImage"
            android:layout_marginTop="-40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:textColor="@color/black"
            android:text="Welcome back!"
            android:fontFamily="@font/poppinssemibold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:text="Sign in to get back."
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/poppinsregular" />

        <!-- Username Input Field -->
        <EditText
            android:id="@+id/username"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textColorHint="@color/calendar2"
            android:layout_marginBottom="-10dp"/>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_marginTop="-20dp"
            android:layout_height="wrap_content">

            <!-- Password Input Field -->
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:textSize="16dp"
                android:textColorHint="@color/calendar2"
                android:textColor="@color/black"
                android:maxLength="20"
                android:focusableInTouchMode="true"
                android:layout_marginBottom="20dp"
                android:paddingEnd="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <!-- Toggle Password Visibility Image -->
            <ImageButton
                android:id="@+id/togglePasswordVisibility"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/close"
                android:contentDescription="Toggle password visibility"
                android:background="?android:selectableItemBackgroundBorderless"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp" />

            <!-- Forgot Password Text -->
            <TextView
                android:id="@+id/forgotPassTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/poppinsregular"
                android:text="Forgot password?"
                android:textColor="@color/blue"
                android:textSize="13sp"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/password"
                android:layout_marginTop="15dp"
                android:layout_alignParentStart="true" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="-10dp">  <!-- Adjust margin as needed -->

            <CheckBox
                android:id="@+id/remember_me_chkb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FCFCFC"
                android:text="Remember me"
                android:buttonTint="@color/black"
                android:textColor="#000000"
                android:fontFamily="@font/poppinsregular"
                android:textSize="13sp"
                android:visibility="gone"
                android:layout_marginEnd="40dp"/>


        </LinearLayout>


        <Button
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/button_text"
            android:fontFamily="@font/poppinssemibold"
            android:backgroundTint="@color/button_background"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/signUpTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? Click here."
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/blue"
            android:textSize="13dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="135dp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>
</ScrollView>
