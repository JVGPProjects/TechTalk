<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DEE2FC"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/button_back"
        android:contentDescription="Back"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:onClick="onBackButtonClick"
        android:src="@drawable/back1" />

    <TextView
        android:id="@+id/headerImageView"
        android:layout_below="@id/backButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-28dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Shape"
        android:textColor="@color/black"
        android:fontFamily="@font/poppinssemibold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/headerImageView"
        android:layout_above="@id/backButton"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="34dp"
        android:layout_alignParentBottom="true"
        android:fillViewport="true">

        <GridLayout
            android:id="@+id/shapesGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="5"
            android:padding="8dp">


            <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                android:backgroundTint="@color/white"
                android:background="@null"
                android:src="@drawable/ic_circle"
                android:contentDescription="Circle"
                android:tag="circle" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                android:backgroundTint="@color/white"
                android:background="@null"
                android:src="@drawable/ic_square"
                android:contentDescription="Square"
                android:tag="square" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                android:backgroundTint="@color/white"
                android:background="@null"
                android:src="@drawable/ic_rectangle"
                android:contentDescription="Rectangle"
                android:tag="rectangle" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                android:backgroundTint="@color/white"
                android:background="@null"
                android:src="@drawable/ic_triangle"
                android:contentDescription="Triangle"
                android:tag="triangle" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                android:backgroundTint="@color/white"
                android:background="@null"
                android:src="@drawable/ic_heart"
                android:contentDescription="Heart"
                android:tag="heart" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                android:backgroundTint="@color/white"
                android:background="@null"
                android:src="@drawable/ic_diamond"
                android:contentDescription="Diamond"
                android:tag="diamond" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                android:backgroundTint="@color/white"
                android:background="@null"
                android:src="@drawable/ic_star"
                android:contentDescription="Star"
                android:tag="star" />

        </GridLayout>
    </ScrollView>
</RelativeLayout>
