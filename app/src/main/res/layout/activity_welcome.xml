<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#FBFAFA"
	tools:context=".WelcomeActivity">

	<!-- Back Button at the Top Left -->

	<ImageView
		android:layout_width="511dp"
		android:layout_height="272dp"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:layout_marginStart="-22dp"
		android:layout_marginTop="-68dp"
		android:contentDescription="Back"
		android:padding="0dp"
		android:src="@drawable/top" />

	<ImageButton
		android:id="@+id/Button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"
		android:padding="0dp"
		android:contentDescription="Back" />

	<ImageButton
		android:id="@+id/logoButton"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_alignParentEnd="true"
		android:layout_alignParentTop="true"
		android:layout_marginEnd="20dp"
		android:layout_marginTop="30dp"
		android:backgroundTint="@color/button_background"
		android:contentDescription="Profile"
		android:scaleType="fitCenter"
		android:padding="0dp"
		android:src="@drawable/robothead" />


	<!-- Welcome Message -->
	<TextView
		android:id="@+id/welcomeText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/Button"
		android:layout_marginTop="30dp"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="20dp"
		android:textSize="27sp"
		android:textStyle="bold"
		android:textColor="@android:color/black" />

	<!-- Welcome Message -->
	<TextView
		android:id="@+id/welcome"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/welcomeText"
		android:layout_marginTop="-10dp"
		android:layout_marginBottom="60dp"
		android:text="Welcome to TechTalk"
		android:fontFamily="@font/poppinsregular"
		android:layout_marginLeft="20dp"
		android:textSize="17sp"
		android:textStyle="bold"
		android:textColor="@android:color/black" />

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/welcome"
		android:layout_above="@id/logoButton"
		android:layout_marginTop="12dp"
		android:foregroundGravity="center_vertical"
		android:layout_marginBottom="64dp"
		android:layout_alignParentBottom="true">

	<GridLayout
		android:id="@+id/alphabetGrid"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:columnCount="2"
		android:rowCount="5"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:padding="8dp">


		<!-- TTS Button -->
		<ImageButton
			android:id="@+id/ttsButton"
			android:layout_width="150dp"
			android:layout_height="150dp"
			android:layout_row="0"
			android:layout_column="0"
			android:layout_marginTop="10dp"
			android:layout_margin="8dp"
			android:backgroundTint="@android:color/transparent"
			android:contentDescription="Text-To-Speech"
			android:scaleType="fitCenter"
			android:src="@drawable/tts" />

		<!-- Conversation Button -->
		<ImageButton
			android:id="@+id/conversationButton"
			android:layout_width="150dp"
			android:layout_height="150dp"
			android:layout_row="1"
			android:layout_column="0"
			android:layout_margin="8dp"
			android:backgroundTint="@android:color/transparent"
			android:contentDescription="Conversation"
			android:scaleType="fitCenter"
			android:src="@drawable/conversation" />

		<!-- Feelings Button -->
		<ImageButton
			android:id="@+id/moodButton"
			android:layout_width="150dp"
			android:layout_height="150dp"
			android:layout_row="1"
			android:layout_column="1"
			android:layout_margin="8dp"
			android:backgroundTint="@android:color/transparent"
			android:contentDescription="Mood"
			android:scaleType="fitCenter"
			android:src="@drawable/feelings" />

		<!-- Alphabet Button -->
		<ImageButton
			android:id="@+id/signLanguageButton"
			android:layout_width="150dp"
			android:layout_height="150dp"
			android:layout_row="2"
			android:layout_column="0"
			android:layout_margin="8dp"
			android:backgroundTint="@android:color/transparent"
			android:contentDescription="Sign Language"
			android:scaleType="fitCenter"
			android:src="@drawable/alphabet" />

		<!-- Family Button -->
		<ImageButton
			android:id="@+id/familyButton"
			android:layout_width="150dp"
			android:layout_height="150dp"
			android:layout_row="0"
			android:layout_column="1"
			android:layout_marginTop="10dp"
			android:layout_margin="8dp"
			android:backgroundTint="@android:color/transparent"
			android:contentDescription="Family"
			android:scaleType="fitCenter"
			android:src="@drawable/family" />

		<!-- Animal Button -->
		<ImageButton
			android:id="@+id/animalButton"
			android:layout_width="150dp"
			android:layout_height="150dp"
			android:layout_row="2"
			android:layout_column="1"
			android:layout_margin="8dp"
			android:backgroundTint="@android:color/transparent"
			android:contentDescription="Animal"
			android:scaleType="fitCenter"
			android:src="@drawable/animal" />

		<!-- Building Button -->
		<ImageButton
			android:id="@+id/buildingButton"
			android:layout_width="150dp"
			android:layout_height="150dp"
			android:layout_row="4"
			android:layout_column="0"
			android:layout_margin="8dp"
			android:backgroundTint="@android:color/transparent"
			android:contentDescription="Building"
			android:scaleType="fitCenter"
			android:src="@drawable/building" />

		<!-- Shape Button -->
		<ImageButton
			android:id="@+id/shapeButton"
			android:layout_width="150dp"
			android:layout_height="150dp"
			android:layout_row="3"
			android:layout_column="0"
			android:layout_margin="8dp"
			android:backgroundTint="@android:color/transparent"
			android:contentDescription="Shape"
			android:scaleType="fitCenter"
			android:src="@drawable/shape" />

		<!-- Color Button -->
		<ImageButton
			android:id="@+id/colorButton"
			android:layout_width="150dp"
			android:layout_height="150dp"
			android:layout_row="3"
			android:layout_column="1"
			android:layout_margin="8dp"
			android:backgroundTint="@android:color/transparent"
			android:contentDescription="Color"
			android:scaleType="fitCenter"
			android:src="@drawable/color" />

	</GridLayout>
	</ScrollView>


	<com.google.android.material.bottomnavigation.BottomNavigationView
		android:id="@+id/bottomNavigationView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		app:menu="@menu/bottom_navigation_menu"
		android:layout_marginBottom="-20dp"
		android:background="@android:color/white"
		app:itemIconTint="@color/colorUnselectedd"
		app:itemTextColor="@color/bottom_navigation_text_color" />
</RelativeLayout>
