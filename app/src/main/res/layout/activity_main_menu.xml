<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFAFA"
    tools:context=".WelcomeActivity">

    <ImageView
        android:id="@+id/signinImage"
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:contentDescription="Sign In Image"
        android:scaleType="fitCenter"
        android:src="@drawable/create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp" />

    <TextView
        android:id="@+id/verifiedMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Getting Started with TechTalk!"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:fontFamily="@font/poppinssemibold"
        android:layout_marginTop="-10dp"
        app:layout_constraintTop_toBottomOf="@+id/signinImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/verifiedMessage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click 'Next' to begin a brief tutorial that"
        android:layout_gravity="center"
        android:textSize="14dp"
        android:fontFamily="@font/poppinsregular"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/verifiedMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/verifiedMessage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="will guide you through the features and help"
        android:layout_gravity="center"
        android:textSize="14dp"
        android:fontFamily="@font/poppinsregular"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/verifiedMessage1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/verifiedMessage3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="you make the most of your experience."
        android:layout_gravity="center"
        android:textSize="14dp"
        android:fontFamily="@font/poppinsregular"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/verifiedMessage2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button_background"
        android:fontFamily="@font/poppinssemibold"
        android:text="Next"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/verifiedMessage3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:padding="12dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
