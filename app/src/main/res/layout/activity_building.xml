<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/building"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/building"
        android:contentDescription="Back"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:onClick="onBackButtonClick"
        android:src="@drawable/back1" />

    <TextView
        android:id="@+id/headerTextView"
        android:layout_below="@id/backButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-28dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:text="Buildings"
        android:fontFamily="@font/poppinssemibold" />

    <GridLayout
        android:id="@+id/buildingGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerTextView"
        android:layout_centerHorizontal="true"
        android:columnCount="2"
        android:rowCount="3"
        android:padding="8dp">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitCenter"
            android:backgroundTint="@color/white"
            android:background="@null"
            android:src="@drawable/ic_house"
            android:contentDescription="House"
            android:tag="house" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitCenter"
            android:backgroundTint="@color/white"
            android:background="@null"
            android:src="@drawable/ic_school"
            android:contentDescription="School"
            android:tag="school" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitCenter"
            android:backgroundTint="@color/white"
            android:background="@null"
            android:src="@drawable/ic_church"
            android:contentDescription="Church"
            android:tag="church" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitCenter"
            android:backgroundTint="@color/white"
            android:background="@null"
            android:src="@drawable/ic_zoo"
            android:contentDescription="Zoo"
            android:tag="zoo" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitCenter"
            android:backgroundTint="@color/white"
            android:background="@null"
            android:src="@drawable/ic_shop"
            android:contentDescription="Food Store"
            android:tag="foodstore" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitCenter"
            android:backgroundTint="@color/white"
            android:background="@null"
            android:src="@drawable/ic_police"
            android:contentDescription="Police Station"
            android:tag="policestation" />

    </GridLayout>

</RelativeLayout>
