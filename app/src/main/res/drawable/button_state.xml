<!-- res/drawable/button_state.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg" /> <!-- Change this to your desired pressed color -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bg1" /> <!-- Background color when not pressed -->
        </shape>
    </item>
</selector>
