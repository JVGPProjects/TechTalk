<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Top Border -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparent background -->
            <stroke android:width="2dp" android:color="@color/red" /> <!-- Top border color -->
            <size android:height="2dp" /> <!-- Height for the top border -->
        </shape>
    </item>

    <!-- Left Border -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="2dp" android:color="@color/green" /> <!-- Left border color -->
            <size android:width="2dp" android:height="0dp" /> <!-- Width for the left border -->
        </shape>
    </item>
    <!-- Bottom Border -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="2dp" android:color="@color/black" /> <!-- Bottom border color -->
            <size android:height="2dp" /> <!-- Height for the bottom border -->
        </shape>
    </item>

    <!-- Right Border -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="2dp" android:color="@color/bg" /> <!-- Right border color -->
            <size android:width="2dp" android:height="0dp" /> <!-- Width for the right border -->
        </shape>
    </item>


</layer-list>
